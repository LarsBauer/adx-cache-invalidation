{

    "manifest_version": 2,
    "name": "Adx Cache Invalidation",
    "version": "1.0",

    "description": "Manual Portal Cache Invalidation to Refresh Changes",

    "icons": {
        "48": "icons/refresh-48.png",
        "96": "icons/refresh-96.png"
    },

    "permissions": [
        "tabs",
        "activeTab"
    ],

    "browser_action": {
        "default_icon": {
            "16": "icons/refresh-16.png",
            "32": "icons/refresh-32.png"
        },
        "default_title": "Adx Cache Invalidation"
    },

    "background": {
        "scripts": [
            "browser-polyfill.js",
            "invalidate-cache.js"
        ]
    }

}